package com.sms.student.mapper;

import java.util.List;

import org.springframework.stereotype.Component;

import com.sms.student.dto.request.CreateStudentRequest;
import com.sms.student.dto.response.StudentResponse;
import com.sms.student.entity.Student;

@Component
public class StudentMapper {
	

	public static Student toEntity(CreateStudentRequest req) {
        if (req == null) return null;

        Student s = new Student();
        s.setName(req.getName());
        s.setMail(req.getMail());
        s.setPhonenumber(req.getPhonenumber());
        s.setMothername(req.getMothername());
        s.setFathername(req.getFathername());
        s.setParentpno(req.getParentpno());
        s.setAddress(req.getAddress());
        s.setSchool(req.getSchool());
        s.setTenthper(req.getTenthper());
        s.setTwelfthper(req.getTwelfthper());
        s.setDepartment(req.getDepartment());
        s.setAdmissionmode(req.getAdmissionmode());

        return s;
    }


	public static StudentResponse toResponse(List<Student> students) {
        if (students == null) return null;

        StudentResponse res = new StudentResponse();
        res.setRollno(students.getRollno());
        res.setName(students.getName());
        res.setMail(students.getMail());
        res.setPhonenumber(students.getPhonenumber());
        res.setMothername(students.getMothername());
        res.setFathername(students.getFathername());
        res.setParentpno(students.getParentpno());
        res.setAddress(students.getAddress());
        res.setSchool(students.getSchool());
        res.setTenthper(students.getTenthper());
        res.setTwelfthper(students.getTwelfthper());
        res.setDepartment(students.getDepartment());
        res.setAdmissionmode(students.getAdmissionmode());

        return res;
    }


}
