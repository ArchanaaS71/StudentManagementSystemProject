package com.sms.student.service;

import java.util.List;

import org.springframework.http.ResponseEntity;

import com.sms.student.dto.request.CreateStudentRequest;
import com.sms.student.dto.request.UpdateStudentRequest;
import com.sms.student.dto.response.StudentResponse;

import jakarta.validation.Valid;

public interface StudentService {

	ResponseEntity<?> addStudent(@Valid CreateStudentRequest request);

	ResponseEntity<?> displayAllStudents();

	ResponseEntity<?> displayStudentByRoll(Integer rollno);

	ResponseEntity<List<StudentResponse>> getStudentsByDepartment(String department);

	ResponseEntity<?> updateStudents(@Valid UpdateStudentRequest request);

	ResponseEntity<?> deleteProductById(Integer id);

	ResponseEntity<?> deleteStudentById(Integer id);

}
